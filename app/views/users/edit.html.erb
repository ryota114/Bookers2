<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label><br />
            <%= f.text_field :name, id:"user_name", class: "form-control" %>
          </div>
          <!--user画像編集部分-->
          <div class="form-group">
            <label for="user_image">Image</label><br />
            <%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class: "form-control-file" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label><br />
            <%= f.text_area :introduction, id:"user_introduction", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>