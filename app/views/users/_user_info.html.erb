<div>
  <!--ユーザー情報部分-->
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <!--ユーザーコンフィグアイコンとボタン外枠グレー横幅いっぱい-->
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <!--book登録部分-->
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, local: true do |b| %>
    <!--タイトルと内容の入力フォーム-->
    <div class="form_group">
      <label>Title</label></br>
      <%= b.text_field :title, class:"form_control" %>
    </div>
    <div class="form_group">
      <label>Opinion</label></br>
      <%= b.text_area :body, class:"form_control" %>
    </div>
    <div class="form_group">
      <%= b.submit "Create Book", class:"btn btn-success" %>
    </div>

  <% end %>

</div>