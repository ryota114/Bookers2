<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!--UserInfo部分テンプレート-->
      <div class="col-md-3">
        <%= render "users/user_info", user: @user, book: @book %>
      </div>
      <!--右側のUsers部分-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover">
          <!--|image|name|colspan 3|-->
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <!--全Userデータ数だけ繰り返す-->
          <tbody>
            <% @users.each do |users| %>
            <tr>
              <td>
                <%= attachment_image_tag users, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size: "30x30" %>
              </td>
              <td><%= users.name %></td>
              <!--遷移先は各user_id-->
              <td><%= link_to "Show", user_path(users) %></td>
            </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</main>